# Backend server
PORT=3000

# API base para frontend (producción)
# Usa '/api' en desarrollo (proxy de Vite) y una URL pública en producción si tu backend está alojado aparte.
VITE_API_BASE=/api
# VITE_API_BASE=https://tu-backend.example.com/api

# SMTP settings (ejemplos)
# Reemplaza con tus propios valores y NO publiques secretos reales.
MAIL_HOST=smtp.mail.yahoo.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=miguelaude@ymail.com
MAIL_PASS=your_app_password_here

# Dirección destino que recibirá los mensajes de contacto
MAIL_TO=destino@dominio.com


# EmailJS (frontend)
# Estos se usan si prefieres enviar vía EmailJS en vez de SMTP.
# La public key no es secreto pero mantén configurables service/template IDs.
VITE_EMAILJS_PUBLIC_KEY=YOUR_PUBLIC_KEY
VITE_EMAILJS_SERVICE_ID=service_0g684ya
VITE_EMAILJS_TEMPLATE_ID=template_jm1hl2w
VITE_EMAILJS_DISABLE=false