# SPA fallback for Vite React app on Apache (Hostinger)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Serve existing files normally (no bloquear por directorios)
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Fallback all other routes to index.html (ignorar directorios)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule . /index.html [L]
</IfModule>

# Fallback cuando mod_rewrite no est√° disponible
ErrorDocument 404 /index.html
Options -MultiViews
# end fallback

# Optional: basic cache headers for static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# Security: prevent directory listing
Options -Indexes