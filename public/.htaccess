# SPA fallback for Vite React app on Apache (Hostinger)
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Forzar HTTPS
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Canonical: redirigir www a dominio raíz
  RewriteCond %{HTTP_HOST} ^www\.audedev\.com$ [NC]
  RewriteRule ^ https://audedev.com%{REQUEST_URI} [L,R=301]
  
  RewriteBase /

  # Serve existing files normally (no bloquear por directorios)
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Fallback all other routes to index.html (ignorar directorios)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule . /index.html [L]
</IfModule>

# Fallback cuando mod_rewrite no está disponible
ErrorDocument 404 /index.html
Options -MultiViews
# end fallback

# Optional: basic cache headers for static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# Security: prevent directory listing
Options -Indexes
<IfModule mod_headers.c>
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  Header always set Content-Security-Policy "upgrade-insecure-requests; block-all-mixed-content"
</IfModule>